<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_rowSpan="1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_columnWeight="0.4"
        android:id="@+id/imageViewTeam1"
        android:layout_row="0"
        android:layout_column="0"
        android:gravity="center"/>
    <ImageView
        android:layout_rowSpan="1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_columnWeight="0.4"
        android:id="@+id/imageViewTeam2"
        android:layout_row="1"
        android:layout_column="0"
        android:gravity="center"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="2"
        android:id="@+id/textViewTeam1"
        android:layout_row="0"
        android:layout_column="1"
        android:gravity="center_vertical"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="2"
        android:id="@+id/textViewTeam2"
        android:layout_row="1"
        android:layout_column="1"
        android:gravity="center_vertical"/>
    <TextView
        android:layout_height="wrap_content"
        android:layout_columnWeight="0.3"
        android:id="@+id/textViewHomeGoals"
        android:layout_row="0"
        android:layout_column="2"
        android:gravity="center"/>
    <TextView
        android:layout_height="wrap_content"
        android:layout_columnWeight="0.3"
        android:id="@+id/textViewAwayGoals"
        android:layout_row="1"
        android:layout_column="2"
        android:gravity="center"/>
    <TextView
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:id="@+id/textViewDate"
        android:layout_row="0"
        android:layout_column="3"
        android:gravity="center"/>
    <TextView
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:id="@+id/textViewTime"
        android:layout_row="1"
        android:layout_column="3"
        android:gravity="center"/>
</GridLayout>
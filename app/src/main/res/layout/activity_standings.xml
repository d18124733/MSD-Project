<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".activities.Standings">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/update_header"/>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/headers"
        android:layout_below="@id/update_header">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="0.3"
            android:id="@+id/positionHeader"
            android:layout_row="0"
            android:layout_column="0"
            android:gravity="center"/>
        <ImageView
            android:layout_width="30dp"
            android:scaleType="fitXY"
            android:id="@+id/imageHeader"
            android:layout_row="0"
            android:layout_column="1" />
        <TextView
            android:layout_rowSpan="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_marginLeft="10dp"
            android:id="@+id/teamHeader"
            android:layout_row="0"
            android:layout_column="2" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="0.25"
            android:id="@+id/matchesPlayedHeader"
            android:layout_row="0"
            android:layout_column="3"
            android:gravity="center"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="0.25"
            android:id="@+id/winsHeader"
            android:layout_row="0"
            android:layout_column="4"
            android:gravity="center"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="0.25"
            android:id="@+id/drawsHeader"
            android:layout_row="0"
            android:layout_column="5"
            android:gravity="center"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="0.25"
            android:id="@+id/lossesHeader"
            android:layout_row="0"
            android:layout_column="6"
            android:gravity="center"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="0.25"
            android:id="@+id/pointsHeader"
            android:layout_row="0"
            android:layout_column="7"
            android:textStyle="bold"
            android:gravity="center"/>
    </GridLayout>

    <ListView
        android:id="@+id/standings_table_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/headers"/>
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="0.3"
        android:id="@+id/textViewPosition"
        android:layout_row="0"
        android:layout_column="0"
        android:gravity="center"/>
    <ImageView
        android:layout_rowSpan="2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:scaleType="fitXY"
        android:id="@+id/imageViewClub"
        android:layout_row="0"
        android:layout_column="1" />
    <TextView
        android:layout_rowSpan="2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_marginLeft="10dp"
        android:id="@+id/textViewTeam"
        android:layout_row="0"
        android:layout_column="2"
        android:gravity="center_vertical"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="0.25"
        android:id="@+id/textViewMatchesPlayed"
        android:layout_row="0"
        android:layout_column="3"
        android:gravity="center"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="0.25"
        android:id="@+id/textViewWins"
        android:layout_row="0"
        android:layout_column="4"
        android:gravity="center"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="0.25"
        android:id="@+id/textViewDraws"
        android:layout_row="0"
        android:layout_column="5"
        android:gravity="center"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="0.25"
        android:id="@+id/textViewLosses"
        android:layout_row="0"
        android:layout_column="6"
        android:gravity="center"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="0.25"
        android:id="@+id/textViewPoints"
        android:layout_row="0"
        android:layout_column="7"
        android:textStyle="bold"
        android:gravity="center"/>
</GridLayout>